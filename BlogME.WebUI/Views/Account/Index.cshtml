@model BlogME.WebUI.Models.AccountViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
@using (Html.BeginForm())
{
    <div class="widewrapper main">
        <div class="container blog-main">
            <div class="row">
                <div class="col-md-4 col-sm-6 tales-superblock">
                    <fieldset>
                        <legend>Sign in to continue</legend>
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" class="form-control input-lg" id="username" placeholder="Username">
                                <label for="username" class="input-group-addon glyphicon glyphicon-user"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input type="password" class="form-control input-lg" id="password" placeholder="Password">
                                <label for="password" class="input-group-addon glyphicon glyphicon-lock"></label>
                            </div>
                        </div>
                        <div class="buttons clearfix">
                            <input type="submit" class="form-control btn btn-lg btn-tales-one" value="Login" />
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
}